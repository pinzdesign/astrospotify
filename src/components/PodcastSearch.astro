---
interface Props {
	title: string;
	color: string;
    badge: boolean;
}

const { title, color, badge } = Astro.props;
---

<div class:list={["playlist", color]}>
    <h6>{title}</h6>
    {badge && <span class="badge">NEW!</span>}
</div>

<style>
    .playlist {
        background-color: pink;
        border-radius: 10px;
        padding: 10px;
        width: 150px;
        height: 150px;
        position: relative;
    }
    h6 {
        font-size: 16px;
        margin-top: 5px;
        margin-bottom: 0px;
    }
    p {
        display: inline-block;
        font-size: 14px;
    }
    .red {
        background-color: red;
    }
    .blue {
        background-color: blue;
    }
    .green {
        background-color: green;
    }
    .purple {
        background-color: purple;
    }
    .yellow {
        background-color: yellow;
    }
    .badge {
        background-color: white;
        border-radius: 5px;
        padding: 10px;
        position: absolute;
        top: -5px;
        right: -5px;
        color: black;
    }
</style>